                    ,   wai
                    ,   warp
                    ,   configurator
                    ,   string-conversions
                    ,   tagged
                    ,   text
                    ,   stm-diskmap
                    ,   hashable
                    ,   cryptohash-sha256
                    ,   cereal
                    ,   errors

  hs-source-dirs:       src

  default-language:     Haskell2010

  other-modules:        ClearingServer.Types.Data
                        PromissoryNote
                        PromissoryNote.Serialization
                        PromissoryNote.Types
                        Store.Config.Types
                        Store.Lib
                        Store.Types
                        Types
                        Types.Config
                        Types.Crypto
